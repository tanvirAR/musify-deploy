{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "numReplicas": 1,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "start": {
    "command": "python manage.py runserver 0.0.0.0:$PORT",
    "background": true
  },
  "plugins": [
    "@railway/sqlite",
    "@railway/python"
  ]
}
