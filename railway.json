{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "env": {
      "PYTHONUNBUFFERED": "1"
    },
    "command": "python manage.py runserver 0.0.0.0:$PORT"
  },
  "deploy": {
    "numReplicas": 1,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "plugins": [
    "@railway/sqlite",
    "@railway/python"
  ]
}
